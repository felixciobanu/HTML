@page
@model Lab3.Pages.Orders.InvoiceModel

<div class="text-center">

	<h1 class="display-4">Invoice of Order id:</h1>
    <div>@Model.Invoice.Id</div>
	<div class="text-left">
			<table class="table  table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Address</th>
						<th scope="col" >Amount</th>
						<th scope="col" >Customer</th>
                        <th scope="col" >Status</th>
					</tr>
				</thead>
				<tbody>
                    <tr>
                        <th scope="row">@Model.Invoice.Address.ToString()</th>
                        <td>@Model.Invoice.Amount</td>
                        <td class="">@Model.Invoice.Customer.Name</td>
                        <td class=" text-nowrap">@Model.Invoice.Status</td>
                    </tr>
				</tbody>
			</table>
	</div>
</div>
