@page
@model Lab3.Pages.Orders.IndexModel

<div class="text-center">

	<h1 class="display-4">Orders</h1>
	<div class="text-left">
			<table class="table  table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col" >Status</th>
						<th scope="col" >Date</th>
						<th scope="col" >Customer Name</th>
						<th scope="col" >Location</th>
						<th scope="col" >Items</th>
						<th scope="col">Offer</th>
						<th scope="col">Invoice</th>
					</tr>
				</thead>
				<tbody>

					@foreach (var item in Model.Orders)
					{
						<tr>
							<th scope="row">@item.Id</th>
							<td>@item.Status</td>
							<td class="">@item.OrderDate.Date.ToString("MMMM dd")</td>
							
							<td class=" text-nowrap">@item.Customer.Name</td>
							<td class=" text-nowrap">@item.Location.ToString()</td>
						
							<td><a class="btn" style="background-color:#6F9A37;" asp-page="Details" asp-route-id="@item.Id"><i class="bi bi-box"></i></a></td>
							<td><a class="btn btn-secondary" asp-page="Offer" asp-route-id="@item.Id"><i class="bi bi-bell"></i></a></td>
							<td><a class="btn btn-primary" asp-page="Invoice" asp-route-id="@item.Id"><i class="bi bi-cash"></i></a></td>
						</tr>
					}
				</tbody>
			</table>
	</div>
</div>
